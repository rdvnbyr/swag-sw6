<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
           https://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Components/Config/Validation -->
        <service id="Swag\AmazonPay\Components\Config\Validation\ConfigValidator"/>

        <!-- Components/Client/Validation -->
        <service id="Swag\AmazonPay\Components\Client\Validation\PaymentProcessResponseValidator"/>
        <service id="Swag\AmazonPay\Components\Client\Validation\PaymentFinalizeResponseValidator"/>

        <service id="Swag\AmazonPay\Components\Button\Validation\ExcludedProductValidator">
            <argument type="service" id="Swag\AmazonPay\Components\Config\ConfigService"/>
            <argument type="service" id="sales_channel.product.repository"/>
        </service>

        <service id="Swag\AmazonPay\Core\Checkout\Payment\Cart\AmazonPayPaymentMethodValidator">
            <argument type="service" id="Swag\AmazonPay\Components\Button\Validation\ExcludedProductValidator"/>

            <tag name="shopware.cart.validator"/>
        </service>
    </services>
</container>
