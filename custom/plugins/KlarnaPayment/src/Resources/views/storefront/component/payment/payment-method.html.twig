{% sw_extends '@Storefront/storefront/component/payment/payment-method.html.twig' %}

{# @var \Shopware\Core\Checkout\Payment\PaymentMethodEntity payment #}
{% block component_payment_method_image %}
    {% if payment.id in constant('KlarnaPayment\\Installer\\Modules\\PaymentMethodInstaller::KLARNA_EXPRESS_CHECKOUT_CODES')|keys %}
        <img class="float-right clearfix payment-method-image img-fluid" src="https://x.klarnacdn.net/payment-method/assets/badges/generic/klarna.png" title="{{ payment.translated.name }}" alt="{{ payment.translated.name }}"/>
    {% elseif payment.id in constant('KlarnaPayment\\Installer\\Modules\\PaymentMethodInstaller::KLARNA_PAYMENTS_CODES')|keys %}
        {# @var \KlarnaPayment\Components\Extension\SessionDataExtension sessionData #}
        {% set sessionData = page.extensions[constant('KlarnaPayment\\Components\\Extension\\SessionDataExtension::EXTENSION_NAME')] %}
        {% set paymentMethodIdentifier = sessionData.getPaymentMethodIdentifier(payment.id) %}
        {% set paymentMethodCategory = sessionData.getPaymentMethodCategory(paymentMethodIdentifier) %}

        <img class="float-right clearfix payment-method-image img-fluid" src="{{ paymentMethodCategory.asset_urls.standard|default('https://x.klarnacdn.net/payment-method/assets/badges/generic/klarna.svg') }}" title="{{ payment.translated.name }}" alt="{{ payment.translated.name }}"/>
    {% else %}
        {{ parent() }}
    {% endif %}
{% endblock %}
